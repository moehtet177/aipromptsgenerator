---
// src/pages/index.astro
import '../styles/home.css';

// This frontmatter is a Starlight-specific way to control what features are enabled on the page.
// We're disabling most of them here to get a clean canvas for your design.
const frontmatter = {
  title: 'AI Prompts Generator',
  template: 'splash',
  editUrl: false,
  pagefind: false,
  lastUpdated: false
};
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{frontmatter.title}</title>
</head>
<body>
  <main>
    <div class="homepage-container">
      <div class="hero-section">
        <h1 class="site-title">AI Prompts Generator</h1>
        <div class="input-area">
          <input type="text" placeholder="Enter your topic or idea..." class="prompt-input" />
          <button class="heart-button">â™¡</button>
        </div>
        <button class="generate-button">Generate Prompt</button>
      </div>

      <div class="graphic top-left-ai"></div>
      <div class="graphic cube"></div>
      <div class="graphic hand"></div>
      <div class="graphic lightbulb"></div>
      <div class="graphic network-globe"></div>
      <div class="graphic user-left"></div>
      <div class="graphic user-right"></div>
      <div class="graphic notepad"></div>

      <footer class="homepage-footer">
        Copyright inteliges.com
      </footer>
    </div>
  </main>
</body>
</html>
<style is:global>
  /* Any global styles you need can go here */
  body {
    overflow-x: hidden;
  }
</style>